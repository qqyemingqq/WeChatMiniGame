@import "../index/index.wxss";
.item {
    margin-top: 40rpx;
    height: 140rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}
.item_icon{
    margin: 10rpx;
    width: 90rpx;
    height: 90rpx;
}